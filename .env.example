# ============================================
# BestDeal Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# Database Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/BestDeal?retryWrites=true&w=majority
DB_USER=your_db_user
DB_PASS=your_db_password

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# Stripe Configuration
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Cloudinary (Image Uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AI Configuration
# USE_AI: 'gemini' or 'groq' - determines the primary text AI provider
USE_AI=groq

# Gemini (always used for vision/image tasks)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Groq (used for text tasks when USE_AI=groq)
GROQ_API_KEY=
# Models are hardcoded for optimal performance:
# - Primary (quality): llama-3.3-70b-versatile
# - Search (throughput): meta-llama/llama-4-scout-17b-16e-instruct
# - Fast: llama-3.1-8b-instant

# Email (Resend)
RESEND_API_KEY=
RESEND_TO_MAIL=