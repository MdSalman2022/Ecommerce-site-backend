# ============================================
# BestDeal Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# Database Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/BestDeal?retryWrites=true&w=majority
DB_USER=your_db_user
DB_PASS=your_db_password

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_EXPIRES_IN=7d

# ============================================
# Google OAuth 2.0
# Get credentials from: https://console.cloud.google.com/apis/credentials
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# ============================================
# Facebook OAuth
# Get credentials from: https://developers.facebook.com/apps/
# ============================================
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# ============================================
# Stripe Configuration
# ============================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Cloudinary (Image Uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AI Configuration
# USE_AI: 'gemini' or 'groq' - determines the primary text AI provider
USE_AI=groq

# Gemini (always used for vision/image tasks)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Groq (used for text tasks when USE_AI=groq)
GROQ_API_KEY=
# Models are hardcoded for optimal performance:
# - Primary (quality): llama-3.3-70b-versatile
# - Search (throughput): meta-llama/llama-4-scout-17b-16e-instruct
# - Fast: llama-3.1-8b-instant

RESEND_API_KEY=
RESEND_TO_MAIL=

# ============================================
# Rate Limiting Configuration
# ============================================
# General API rate limit (per user/IP)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Auth routes (stricter limits)
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW_MS=900000

# AI routes (resource intensive)
AI_RATE_LIMIT_MAX=10
AI_RATE_LIMIT_WINDOW_MS=60000

# ============================================
# Database Pool Configuration
# ============================================
DB_POOL_MAX=10
DB_POOL_MIN=5

STEADFAST_API_KEY=
STEADFAST_SECRET_KEY=


ADMIN_EMAIL=